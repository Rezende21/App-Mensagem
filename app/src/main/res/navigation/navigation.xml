<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/messageFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.lesttalk.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_cadastroFragment"
            app:destination="@id/cadastroFragment" />
        <action
            android:id="@+id/action_loginFragment_to_messageFragment"
            app:popUpTo="@id/messageFragment"
            app:popUpToInclusive="true"
            app:destination="@id/messageFragment" />
    </fragment>
    <fragment
        android:id="@+id/cadastroFragment"
        android:name="com.example.lesttalk.fragment.RegisterFragment"
        android:label="fragment_cadastro"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_cadastroFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_cadastroFragment_to_messageFragment"
            app:popUpTo="@id/messageFragment"
            app:popUpToInclusive="true"
            app:destination="@id/messageFragment" />
    </fragment>
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.example.lesttalk.fragment.MessageFragment"
        android:label="fragment_message"
        tools:layout="@layout/fragment_message" >
        <action
            android:id="@+id/action_messageFragment_to_loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_messageFragment_to_contactsFragment"
            app:destination="@id/contactsFragment" />
        <action
            android:id="@+id/action_messageFragment_to_conversaFragment"
            app:destination="@id/conversaFragment" />
        <action
            android:id="@+id/action_messageFragment_to_configFragment"
            app:destination="@id/configFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.example.lesttalk.fragment.ContactsFragment"
        android:label="fragment_contacts"
        tools:layout="@layout/fragment_contacts" >
        <action
            android:id="@+id/action_contactsFragment_to_messageFragment"
            app:destination="@id/messageFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_conversaFragment"
            app:destination="@id/conversaFragment"
            app:popUpTo="@id/conversaFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/configFragment"
        android:name="com.example.lesttalk.fragment.ConfigFragment"
        android:label="fragment_config"
        tools:layout="@layout/fragment_config" >
        <action
            android:id="@+id/action_configFragment_to_messageFragment"
            app:destination="@id/messageFragment" />
    </fragment>
    <fragment
        android:id="@+id/conversaFragment"
        android:name="com.example.lesttalk.fragment.ConversaFragment"
        android:label="fragment_conversa"
        tools:layout="@layout/fragment_conversa" >
        <argument
            android:name="contactid"
            app:argType="string" />
        <action
            android:id="@+id/action_conversaFragment_to_messageFragment"
            app:destination="@id/messageFragment" />
    </fragment>
</navigation>