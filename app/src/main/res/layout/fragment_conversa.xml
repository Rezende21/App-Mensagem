<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ConversaFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_conversa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="name from user"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_back"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rectcleview_talk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:itemCount="5"
        tools:listitem="@layout/layout_message_received"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/toolbar_conversa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearleyout"/>

    <LinearLayout
        android:id="@+id/linearleyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/edit_message"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:maxLines="7"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="LetsTalk bro"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_float"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:backgroundTint="@color/purple_700"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>