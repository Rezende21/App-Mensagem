<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ConfigFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Configurações"
        app:titleTextColor="@color/white"
        android:background="@color/purple_700"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_nome_configuraões"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nome do usuario"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toobar_config"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_email_configuraçoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email do usuario"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_nome_configuraões"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edit_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:hint="@string/password"
        app:layout_constraintTop_toBottomOf="@id/txt_email_configuraçoes"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edit_Password_confirmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/password"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/edit_Password"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/bt_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atualizar"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_Password_confirmi"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>